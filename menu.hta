<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=9">
  <style>
	body{
		background: black;
		color: white;
		cursor: default;
		padding: 2px;
		font: 16px Arial;
	}
	@font-face{
        font-family: "undertale";
        src: url("data/fonts/undertale.woff") format("woff");
        font-weight: normal;
        font-style: normal;
	}
	@font-face{
		font-family: "PapyrusRus";
		src: url("data/fonts/papyrus.ttf") format("truetype");
		font-weight: normal;
		font-style: normal;
	}
	.text{
		font: 28px undertale;
		color: white;
	}
	button{
		font: 28px undertale;
		color: white;
		background: black;
		border: none;
		cursor: pointer;
	}
	button:hover{
		color: yellow;
	}
  </style>
  <title>UnderTale: Last Story</title>
  <hta:application
  	id=app
  	applicationName="yellowapps.undertail.menu"
	icon="data/icon.ico"
  	caption=yes
	border=dialog
  	innerBorder=yes 
  	selection=no
  	scroll=no
  	contextmenu=no
  	navigable=yes
	maximizeButton=no />
  <script>
  	var WScript = {

  		CreateObject: function(name){
  			return new ActiveXObject(name);
  		},

  		Sleep: function(time){
  			var d = Date.now();
  			while(Date.now() - d < time);
  		},

  		Echo: function(txt){
  			alert(txt);
  		}
  	}

  	function resize(w, h){
  		winWidth = w;
  		winHeight = h;

  		window.resizeTo(winWidth, winHeight);
  		window.moveTo(screen.width / 2 - winWidth / 2, screen.height / 2 - winHeight / 2);
  	}

  	String.prototype.replaceAll = function(what, to){
  		return this.split(what).join(to);
  	}

  	String.prototype.includes = function(search, start){
  		if (typeof start !== 'number') {
  		  start = 0;
  		}

  		if (start + search.length > this.length) {
  		  return false;
  		} else {
  		  return this.indexOf(search, start) !== -1;
  		}
  	}

  	window.console = {
  		log: function(){}
  	}
  	resize(700, 550);
  </script>
</head>
<body>
	<!--ярик лох-->
	<center id="menu">
		<img src="data/textures/interface/logo.png" ondrag="return false">
		<div class="text" style="font-size: 52px; color: red">Last Story</div>
		<h1 style="visibility: hidden">padd</h1>
		<button id="play" style="font-size: 54px;">Играть</button><br><br>
		<button id="options" style="font-size: 54px;">Настройки</button><br><br>
		<button id="exit" style="font-size: 54px;">Выход</button>
	</center>
	<div class="text" style="top: calc(100% - 18px); font-size: 16px; color: gray; position: absolute;">Создано iaronim и t.me/nekit270&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Версия 0.0.1 (tech test 4) от 04.06.2022</div>
	
	<img id="img0" src="" style="display: none" width="100%" height="100%">
	<script>
		var shell = WScript.CreateObject("WScript.Shell");
		
		menu.style.display = "none";
		img0.style.display = "block;"
		
		var a = new Audio("data/music/menu.mp3");
		a.loop = true;
		a.play();
		
		var img = 1;
		setTimeout(function _(){
			img0.src = "data/textures/interface/bg" + img + ".png";
			
			img++;
			if(img < 4) setTimeout(_, 2000);
		}, 2000);
		
		img0.style.display = "none";
		menu.style.display = "block";
		
		play.onclick = function(){
			shell.Run("main.hta");
			window.close();
		}
		options.onclick = function(){
			shell.Run("options.hta");
			window.close();
		}
		exit.onclick = function(){
			window.close();
		}
	</script>
</body>
</html>
